{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "src",     // ton dossier source
    "outDir": "dist"      // dossier où TS va mettre les fichiers compilés
  },
  "include": ["src"]
}
